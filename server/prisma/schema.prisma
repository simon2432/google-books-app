generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id        Int              @id @default(autoincrement())
  email     String           @unique
  password  String
  libros    LibroGuardado[]
  favoritos Libro[]
}

model LibroGuardado {
  id             Int      @id @default(autoincrement())
  usuario        Usuario  @relation(fields: [usuarioId], references: [id])
  usuarioId      Int
  googleBookId   String
  titulo         String
  autores        String?
  imagenUrl      String?
  comentario     String?
  fechaGuardado  DateTime @default(now())
}

model Libro {
  id          Int      @id @default(autoincrement())
  usuario     Usuario  @relation(fields: [usuarioId], references: [id])
  usuarioId   Int
  title       String
  author      String
  description String?
  imageUrl    String?
  createdAt   DateTime @default(now())
}


